<%= link_to 'Back', profiles_path%>
<%= render 'about' %>
<% if current_user.id == @user.id %>
  <%= link_to 'Edit', edit_profile_path(current_user.id)%>
<% end %>
<% if !@skills.empty? %>
  <%= render 'skills' %>
<% else %>
  <% if current_user.id == @user.id %>
    <h2><%= link_to "Add your first Skill #{ current_user.name }", new_skill_path(current_user.id)%> </h1>
  <% end %>
<% end %>

<% if !@social_network.empty? %>
  <h1>Social networks <%= @user.name %> </h1>
  <% @social_network.each do |network| %>
    <div>
      <%= link_to network.network , network.url, target: "_blank" %>
      <% if current_user.id == @user.id %>
        <%= link_to 'X', social_network_path(network), method: :delete ,data: {confirm: "Are you sure ?"}%>
      <% end %>
    </div>
  <% end %>
  <% if current_user.id == @user.id %>
    <%= link_to 'add', new_social_network_path(current_user.id)%>
  <% end %>
<% else %>
  <% if current_user.id == @user.id %>
    <h2><%= link_to "Add your Social network #{ current_user.name }", new_social_network_path(current_user.id)%> </h2>
  <% end %>
<% end %>
