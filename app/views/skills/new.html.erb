<%= link_to profile_path(current_user.id) do %>
  <%= image_tag 'back', class: "back"%>
<% end %>
<div class="newForm">
  <h1 class="newForm__title"> Add a new Skill <span><%= current_user.name%></span> </h1>
  <%= form_with scope: :skill, url: skills_path, local:true do |f|%>
    <div class="newForm__bg newForm__gap">
      <div class="newForm__row--short">
        <%= f.label "Skill Name:", class: "newForm__label" %>
        <%= f.text_field :name, class: "newForm__input" %>
      </div>
      <div class="newForm__row">
        <div></div>
        <%= f.submit "Create Skill", class:"newForm__button"%>
      </div>
    </div>
  <% end %>

  <% if @skill.errors.any? %>
    <h2 class="newForm__title"> The following errors prevented the Skill from being saved</h2>
    <ul class="newForm__errors">
    <% @skill.errors.full_messages.each do |msg|%>
      <li><span><%= msg %></span></li>
    <% end %>
    </ul>
  <% end %>
</div>
