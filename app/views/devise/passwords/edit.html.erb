<div class="margin-top"></div>
<div class="newForm">
  <h1 class="newForm__title">Change your password</h1>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.hidden_field :reset_password_token %>
    <div class="newForm__bg newForm__gap">
      <div class="newForm__row">
        <%= f.label :password, "New password", class: "newForm__label" %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.label :password_confirmation, "Confirm new password", class: "newForm__label" %>
      </div>

      <div class="newForm__row">
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "newForm__input" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "newForm__input" %>
      </div>

      <div class="newForm__row">
        <div></div>
        <%= f.submit "Change my password", class:"newForm__button" %>
      </div>
    </div>
  <% end %>
  <%= render "devise/shared/error_messages", resource: resource %>
</div>
