<div class="cont">
  <%= link_to profile_path(current_user.id) do %>
    <%= image_tag 'back', class: "back"%>
  <% end %>
</div>
<div class="newForm">
  <h1 class="newForm__title">Edit <%= resource_name.to_s.humanize %></h1>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <div class="newForm__bg newForm__gap">
      <div class="newForm__col">
        <%= f.label :name, class: "newForm__label" %>
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "newForm__input" %>
      </div>

      <div class="newForm__col">
        <%= f.label :picture, class: "newForm__label" %>
        <%= f.file_field :picture, accept:"image/png,image/jpeg", class: "newForm__input" %>
      </div>

      <div class="newForm__col">
        <%= f.label :email, class: "newForm__label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "newForm__input" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="newForm__col">
        <div>
          <%= f.label :password, class: "newForm__label" %> <i>(leave blank if you don't want to change it)</i>
          <% if @minimum_password_length %>
            <em><%= @minimum_password_length %> characters minimum</em>
          <% end %>
        </div>
        <%= f.password_field :password, autocomplete: "new-password", class: "newForm__input" %>
      </div>

      <div class="newForm__col">
        <%= f.label :password_confirmation, class: "newForm__label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "newForm__input" %>
      </div>

      <div class="newForm__col">
        <div>
          <%= f.label :current_password, class: "newForm__label" %> <i>(we need your current password to confirm your changes)</i>
        </div>
        <%= f.password_field :current_password, autocomplete: "current-password", class: "newForm__input" %>
      </div>

      <div class="newForm__row">
        <%= f.label :birthday, class: "newForm__label" %>
        <%= f.label "Gender", class: "newForm__label" %>
      </div>

      <div class="newForm__row">
        <%= f.date_field :birthday, autofocus: true, class: "newForm__input" %>
        <%= f.select(:gender, options_for_select([['Female','Female'],['Male','Male']])) %>
      </div>

      <div class="newForm__row">
        <%= f.submit "Update", class:"newForm__button grid-column" %>
      </div>
      <%= render "devise/shared/error_messages", resource: resource %>
    </div>
  <% end %>

  <h3 class="newForm__title">Cancel my account</h3>

  <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
</div>
